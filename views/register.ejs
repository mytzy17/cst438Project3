<%- include ('templates/header'); -%>
<%- include ('templates/navbar'); -%>
<body id="backgroundRegister">
    <div class="container">
        <form action='/register' method='POST'>
            <div class="row">
                <div class="col-md-offset-4 col-md-4 text-center">
                      <div class="form-login"></br>
                        <h4 class="smoltitle">Register</h4>
                        </br>
                        <input type="text" id="username" class="form-control input-sm chat-input" name = "username" placeholder="Enter username" required/>
                        <%if(userErrMsg.length) {%>
                            <p><%=userErrMsg%></p>
                        <% } %>
                        </br></br>
                        <input type="password" id="password" class="form-control input-sm chat-input" name = "password" placeholder="*******" required/>
                        </br></br>
                        <input type='email' class='form-control' id='email' name='email' placeholder='email' required>
                        <br><br>
                        <div class='wrapper'>
                			<div class='col-sm-4'></div>
                			<div class='col-sm-4'>
                				<button class='btn btn-danger btn-lg'>Register</button>
                			</div>
                			<div class='col-sm-4'></div>
                		</div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</body>
